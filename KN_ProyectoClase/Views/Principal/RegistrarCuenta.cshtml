@model KN_ProyectoClase.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}


<div class="row justify-content-center" style="margin-top:100px">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">

                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>

                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="alert alert-warning msjCentrado" role="alert">
                                    @ViewBag.Mensaje
                                </div>
                            }

                            @using (Html.BeginForm("RegistrarCuenta", "Principal"))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Identificacion, new { @class = "form-control form-control-user", @placeholder = "Identificación", @Required = "true", @onkeyup="ConsultarNombre();"})
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @Required = "true", @ReadOnly = "true"})
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Correo, new { @class = "form-control form-control-user", @placeholder = "Correo", @type = "Email", @Required = "true" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Contrasena, new { @class = "form-control form-control-user", @placeholder = "Contraseña", type = "password", @Required = "true" })
                                </div>

                                <input type="submit" class="btn btn-danger btn-user btn-block" value="Register Account" />
                            }
                            <hr>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("RecuperarContrasena", "Principal")">Recuperar Contraseña?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("IniciarSesion", "Principal")">Iniciar Sesión!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Inicio", "Principal")">Dashboard Principal!</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>