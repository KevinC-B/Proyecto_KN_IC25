@model KN_ProyectoClase.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="row justify-content-center" style="margin-top:100px">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">

                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                <p class="mb-4">
                                    We get it, stuff happens. Just enter your email address below
                                    and we'll send you a link to reset your password!
                                </p>
                            </div>
                            @using (Html.BeginForm("RecuperarContrasenna", "Principal"))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Correo, new { @class = "form-control form-control-user", @placeholder = "Ingrese correo asociado..." })
                                </div>

                                <input type="submit" class="btn btn-danger btn-user btn-block" value="Procesar" />

                            }
                            <hr>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("RegistrarCuenta", "Principal")">Crear una cuenta!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("IniciarSesion", "Principal")">Iniciar Sesión!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Inicio", "Principal")">Dashboard Principal!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>