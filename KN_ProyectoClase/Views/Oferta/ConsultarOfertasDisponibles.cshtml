@model List<KN_ProyectoClase.BaseDatos.ConsultarOfertas_Result>

@{
    ViewBag.Title = "ConsultarOfertas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Ofertas Disponibles</h5>
        </div>
        <div class="card-body">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12 col-md-6"></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example" class="table table-bordered table-hover" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Cantidad</th>
                                    <th>Salario</th>
                                    <th>Horario</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    var disponible = item.Disponible ? "Activo" : "Inactivo";

                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Nombre</td>
                                        <td>@item.Cantidad</td>
                                        <td>$@item.Salario.ToString("N2")</td>
                                        <td>@item.Horario</td>
                                        <td>@disponible</td>
                                        @if (Session["NombreUsuario"] != null)
                                        {
                                            <td><input type="button" class="btn btn-outline-primary" value="Ver detalle" /></td>
                                        }
                                        else
                                        {
                                            <td><input type="button" class="btn btn-outline-primary" value="Ver detalle" style="cursor:not-allowed" /></td>
                                        }
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Template/js/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        var table = new DataTable('#example', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json',
            },
        });
    });

</script>